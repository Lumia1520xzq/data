<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.wf.data.dao.mysql.DataConfigDao">

    <select id="findByName" resultType="DataConfig">
        SELECT
        <include refid="dataConfigColumns"/>
        FROM data_config a
        WHERE a.name = #{name} AND delete_flag = 0
    </select>

    <select id="findByNameAndChannel" resultType="DataConfig">
        SELECT
        <include refid="dataConfigColumns"/>
        FROM data_config a
        WHERE a.name = #{name} and a.channelId = #{channelId} AND delete_flag = 0
    </select>
</mapper>

