<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 	 http://code.alibabatech.com/schema/dubbo
 	 http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 提供方方应用名，用于计算依赖关系，不是匹配条件，不要与消费一样 -->
    <dubbo:application name="wf_data_rpc_api"/>
    <dubbo:registry id="registry" address="${dubbo.zookeeper}" client="zkclient" timeout="100000"/>
    <dubbo:protocol name="dubbo" accepts="1000" port="${dubbo.api.port}"/>

    <dubbo:consumer timeout="100000"/>
    <!--<dubbo:monitor protocol="registry"></dubbo:monitor>-->

    <!--  用户信息 -->
    <bean id="buryingRpcService" class="com.wf.data.rpc.impl.BuryingRpcServiceImpl"/>
    <dubbo:service interface="com.wf.data.rpc.BuryingRpcService" ref="buryingRpcService" registry="registry"
                   delay="-1"/>

    <bean id="dataBehaviorRecordRpcService" class="com.wf.data.rpc.impl.BehaviorRecordRpcServiceImpl"/>
    <dubbo:service interface="com.wf.data.rpc.BehaviorRecordRpcService"
                   ref="dataBehaviorRecordRpcService" registry="registry" delay="-1"/>

    <!--用户登录ip日志 monitor项目使用-->
    <bean id="dataUserLogRpcService" class="com.wf.data.rpc.impl.DataUicUserLogRpcServiceImpl"/>
    <dubbo:service interface="com.wf.data.rpc.DataUicUserLogRpcService"
                   ref="dataUserLogRpcService" registry="registry" delay="-1"/>
    <!--用户分组 monitor项目使用-->
    <bean id="dataUicGroupRpcService" class="com.wf.data.rpc.impl.DataUicGroupRpcServiceImpl"/>
    <dubbo:service interface="com.wf.data.rpc.DataUicGroupRpcService"
                   ref="dataUicGroupRpcService" registry="registry" delay="-1"/>

    <!--用户充值 monitor项目使用-->
    <bean id="dataTransConvertRpcService" class="com.wf.data.rpc.impl.DataTransConvertRpcServiceImpl"/>
    <dubbo:service interface="com.wf.data.rpc.DataTransConvertRpcService"
                   ref="dataTransConvertRpcService" registry="registry" delay="-1"/>

    <bean id="dataReportGrayUserRpcService" class="com.wf.data.rpc.impl.DataReportGrayUserRpcServiceImpl"/>
    <dubbo:service interface="com.wf.data.rpc.DataReportGrayUserRpcService"
                   ref="dataReportGrayUserRpcService" registry="registry" delay="-1"/>

    <bean id="dataConfigRpcService" class="com.wf.data.rpc.impl.DataConfigRpcServiceImpl"/>
    <dubbo:service interface="com.wf.data.rpc.DataConfigRpcService"
                   ref="dataConfigRpcService" registry="registry" delay="-1"/>
</beans>